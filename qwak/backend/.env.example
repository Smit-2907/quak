# QWAK Recipe Recommender Environment Configuration

# Application Settings
QWAK_APP_NAME="QWAK Recipe Recommender"
QWAK_APP_VERSION="1.0.0"
QWAK_DEBUG=false

# Model Configuration
QWAK_MODEL_PATH="models/"
QWAK_TFIDF_WEIGHT=0.4
QWAK_EMBEDDING_WEIGHT=0.6
QWAK_MAX_RECOMMENDATIONS=50
QWAK_PRELOAD_MODELS=true
QWAK_MODEL_CACHE_SIZE=100

# Performance Configuration
QWAK_ENABLE_CACHING=true
QWAK_CACHE_TTL=3600
QWAK_ENABLE_REDIS_CACHE=true
QWAK_REDIS_URL=""
QWAK_REDIS_HOST="localhost"
QWAK_REDIS_PORT=6379
QWAK_REDIS_DB=0

# API Limits
QWAK_MAX_INGREDIENTS=20
QWAK_REQUEST_TIMEOUT=30
QWAK_MAX_CONCURRENT_REQUESTS=100

# Logging
QWAK_LOG_LEVEL="INFO"